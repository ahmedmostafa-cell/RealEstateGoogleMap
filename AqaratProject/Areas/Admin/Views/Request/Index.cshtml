@model AqaratProject.Models.HomePageModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid" >
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>عرض  الطلبات </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">الطلبات </a></li>
                    <li class="breadcrumb-item active">عرض  الطلبات </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="card" >
                <div class="card-header">
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped ">
                        <thead>
                            <tr>
                               
                               
                                <th>نوع الوحدة العقارية  </th>
                               
                                <th>اسم منطقة الوحدة العقارية  </th>

                                <th>الموافقة عل   العرض  </th>
                              
                              
                            
                                <th>تفاصيل الطلب</th>
                                <th>ملاحظات الطلب</th>
                                <th>تعديل</th>
                               
                                <th>حذف</th>
                           
                              
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lsRequest)
                            {

                                <tr>
                                 
                                   
                                    <td>
                                        @item.UnitName
                                    </td>
                                    <td>
                                        @item.RegionName
                                    </td>
                                   
                                <td>
                                        @item.Notes
                                    </td>


                                    <td>
                                        <a asp-area="Admin" asp-controller="Request" asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-info text-white" style="cursor:pointer">
                                            التفاصيل
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="RequestNote" asp-action="Index2" asp-route-id="@item.RequestId" class="btn btn-info text-white" style="cursor:pointer">
                                            الملاحظات
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Request" asp-action="Form" asp-route-id="@item.RequestId" class="btn btn-info text-white" style="cursor:pointer">
                                            تعديل
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Request" asp-action="Delete" asp-route-id="@item.RequestId" class="btn btn-danger text-white" style="cursor:pointer">
                                            حذف
                                        </a>
                                    </td>
                                 
                                 
                                  


                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>نوع الوحدة العقارية  </th>

                                <th>اسم منطقة الوحدة العقارية  </th>





                                <th>تفاصيل الطلب</th>
                                <th>ملاحظات الطلب</th>
                                <th>تعديل</th>

                                <th>حذف</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
